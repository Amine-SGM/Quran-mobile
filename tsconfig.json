{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": [
      "ES2020"
    ],
    "jsx": "react-native",
    "outDir": "lib",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "~api/*": ["src/api/*"],
      "~types/*": ["src/types/*"],
      "~utils/*": ["src/utils/*"],
      "~theme/*": ["src/theme/*"],
      "~screens/*": ["src/screens/*"],
      "~components/*": ["src/components/*"],
      "~services/*": ["src/services/*"]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "lib"
  ]
}